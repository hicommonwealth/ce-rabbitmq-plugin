{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src",
    "./index.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./test",
    "./scripts"
  ]
}
